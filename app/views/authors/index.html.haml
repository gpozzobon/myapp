%p#notice= notice

%h1 Authors

%table.table.table-dark.table-striped
  %thead
    %tr
      %th
      %th Name
      %th Surname
      %th{:colspan => "3"}
      
  %tbody
    - @authors.each do |author|
      %tr
        %td
          - if author.profile_image.attached?
            = image_tag(author.profile_image, style: 'height:30px;')

        %td= author.name
        %td= author.surname
        %td= link_to icon('fa-solid', 'eye'), author
        %td= link_to icon('fa-solid', 'file-pen'), edit_author_path(author)
        %td= link_to icon('fa-solid', 'trash'), author, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'Download Report', author_report_path, class:"btn btn-primary mr-3"

= link_to 'New Author', new_author_path, class:"btn btn-secondary"